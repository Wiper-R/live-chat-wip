{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["SERVER_PORT"]
    },
    "db:generate": {
      "dependsOn": ["^db:generate"]
    },
    "db:push": {
      "dependsOn": ["^db:push"]
    },
    "db:studio": {
      "dependsOn": ["^db:studio"]
    }
  }
}
